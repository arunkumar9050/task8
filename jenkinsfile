pipeline {
    agent any
    parameters {
        string(name: 'ARUN', defaultValue: 'Veridic', description: 'Who should I say hello to?')
 
        booleanParam(name: 'Is_True', defaultValue: true, description: ' check if the value is true') 
       
    }
    stages {
        stage('Example') {
            steps {
                echo "Hello ${params.ARUN}"
            }
        }
    }
}


