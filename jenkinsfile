pipeline {
    agent any
    parameters {
        string(name: 'ARUN', defaultValue: 'Veridic', description: 'Who should I say hello to?')
 
        booleanParam(name: 'DEBUG_BUILD', defaultValue: true, description: '') 
    }
    stages {
        stage('Example') {
            steps {
                echo "Hello ${params.PERSON}"
            }
        }
    }
}


